<div class="container">
  <%= form_for @plane do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :time_for_takeoff, 'Time for takeoff' %>
      <%= f.text_field :time_for_takeoff, class: 'form-control' %>
    </div>
    <%= f.submit class: 'btn btn-success' %>
    <%= link_to 'Back', planes_path, class: 'btn btn-default' %>
  <% end %>
</div>
